/* pages/yongche/cost_detail/cost_detail.wxss */
page{
    background: #ffffff;
}
.cost_detail_container{
    box-sizing: border-box;
    padding: 0 32rpx;
}
.time_info{
    height: 148rpx;
    border-bottom: 1px dashed  #C8C8C8;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    box-sizing: border-box;
    padding-top: 33rpx;
    margin-bottom: 16rpx;
}
.use_time{
    font-size: 28rpx;
    color: #323232;
}
.use_time_tips_box{
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    margin-left: 20rpx;
}
.use_time_tips{
    font-size: 26rpx;
    color: #323232;
}
.commonFlex{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.height_40{
    height:40rpx;
}
.height_40+.segments_item{
    margin-top: 10rpx;
}
.height_33{
    height:33rpx;
}
.font28{
    font-size: 28rpx;
    color: #323232;
}
.font24{
    font-size: 24rpx;
    color: #888888;
}
.font28_red{
    font-size: 28rpx;
    color: #AB956D;
}
.margin_top_10{
    margin-top: 10rpx;
}
.margin_top_20{
    margin-top: 20rpx;
}
.margin_top_5{
    margin-top: 5rpx;
}
.margin_left_20{
    margin-left: 20rpx;
}
.cut_off_line{
    width: 100%;
    height: 0;
    border-top: 1px dashed #c8c8c8;
    margin-top: 48rpx;
}
.pay_finish{
    display: flex;
    justify-content: flex-end;
    align-items: center;
}
.font24_black{
    font-size: 24rpx;
    color: #323232;
}
.payed_money{
    font-size: 48rpx;
    color: #141414;
    margin-left: 14rpx;
}
.detail_tips{
    font-size: 24rpx;
    color: #0A7DE6;
}
.detail_billing{
    display: flex;
    justify-content: center;
    align-content: center;
    margin-top: 41rpx;
}
.sub-title{
    font-weight: normal;
}