<!--拦截取消订单页面-->
<view class="view-box">
    <pay-window payCount="{{payFee}}" wx:if="{{payFee > 0}}"></pay-window>
    <free-window wx:if="{{payFee == 0}}"></free-window>
    <view class="double-button-box">
        <custom-button content="暂不取消" my-class="not-cancel-button" bind:myevent="cancel"></custom-button>
        <custom-button content="{{dutyFlag == false ? '确认取消行程':'确认取消并付款'}}" my-class="cancel-pay-button" bind:myevent="quitOrder"></custom-button>
    </view>
    <view class="cancel-rule" bindtap="lookRules">
        <image src="../../../images/notice.png" style="width: 28rpx;height: 28rpx"></image>
        <text>取消行程规则</text>
    </view>
</view>
