  background: #F5F5F5;
  border-bottom: 0;
  padding: 0 64rpx 0 40rpx;
}
.subContainer {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.profile {
  width: 112rpx;
  height: 112rpx;
  border-radius: 56rpx;
  border: 1px solid #c8c8c8;
}
.info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  margin-left: 28rpx;
}

.carType_2{
  font-size: 34rpx;
  color: #323232;
}
.plateNumber{
  width: 157rpx;
  height: 48rpx;
  background: #4A90E2;
  border: 1px solid #2D6EBA;
  border-radius: 4px;
  color:#ffffff;
  font-size: 26rpx;
  line-height: 48rpx;
  text-align: center;
  margin-top: 12rpx;
}
.plateNumber_2{
  margin-left: 24rpx;
}
.phoneCall {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: -32rpx;
}
.driverName{
  font-size: 30rpx;
  color: #323232;
}
