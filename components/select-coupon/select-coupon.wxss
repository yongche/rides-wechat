/* components/select-coupon/select-coupon.wxss */
.use_coupon_container {
    width: 750rpx;
    height: 96rpx;
    background: #fff;
    margin-top: 25rpx;
  }
  
  .use_coupon_box {
    width: 750rpx;
    height: 96rpx;
    position: relative;
  }
  
  .no_valid_coupon {
    font-size: 26rpx;
    color: #888;
  }
  
  .valid_coupon {
    font-size: 26rpx;
    color: #ff5252;
  }
  
  .horizontal_line {
    width: 750rpx;
    height: 0rpx;
    position: relative;
  }
  
  .horizontal_line:after {
    content: '';
    position: absolute;
    left: 0;
    background: #E1E1E1;
    width: 750rpx;
    height: 1rpx;
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
  }
  .use_coupon_box:after {
    content: '';
    position: absolute;
    left: 0;
    bottom: 0;
    background: #E1E1E1;
    width: 750rpx;
    height: 1rpx;
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
  }
  
  .use_coupon_box {
    box-sizing: border-box;
    padding: 0 32rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .coupon_logo_box{
    display: flex;
    align-items: center;
  }
  .coupon_logo {
    width: 44rpx;
    height: 44rpx;
  }
  .arrow_logo{
    width: 24rpx;
    height: 24rpx;
  }
  .right_box{
    display: flex;
    align-items: center;
  }
  .coupon_logo_tips{
    font-size: 30rpx;
  color: #000000;
  margin-left: 16rpx;
  }