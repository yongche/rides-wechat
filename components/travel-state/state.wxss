/* components/travel-state/state.wxss */
.travel_state{
    width: 750rpx;
    height: 96rpx;
    /* border-bottom: 1px solid #e1e1e1; */
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
    padding: 0 40rpx;
    background: #ffffff;
    position: relative;
}

.rightBox{
}
.default{
    font-size: 28rpx;
    color: #646464;
}
.highLight{
    font-size: 28rpx;
    color: #AB956D;
    font-weight: 500;
}
.diy_line {
    width: 750rpx;
    height: 0;
    /* border-top: 1px solid #E1E1E1; */
    position: absolute;
    top: 0;
    right: 0;
}
@media only screen and (-moz-min-device-pixel-ratio: 2),
only screen and (-o-min-device-pixel-ratio: 2),
only screen and (-webkit-min-device-pixel-ratio: 2),
only screen and (min-device-pixel-ratio:2) {
    .travel_state:after{
        content: '';
        position: absolute;
        left: 0;
        bottom:0;
        background: #E1E1E1;
        width: 100%;
        height: 1px;
        -webkit-transform: scaleY(0.5);
        transform: scaleY(0.5);
        -webkit-transform-origin: 0 0;
        transform-origin: 0 0;
    }
    .diy_line:after {
        content: '';
        position: absolute;
        left: 0;
        top:0;
        background: #E1E1E1;
        width: 100%;
        height: 1px;
        -webkit-transform: scaleY(0.5);
        transform: scaleY(0.5);
        -webkit-transform-origin: 0 0;
        transform-origin: 0 0;
    }
}
@media only screen and (-moz-min-device-pixel-ratio: 3),
only screen and (-o-min-device-pixel-ratio: 3),
only screen and (-webkit-min-device-pixel-ratio: 3),
only screen and (min-device-pixel-ratio:3) {
    .travel_state:after{
        content: '';
        position: absolute;
        left: 0;
        bottom:0;
        background: #E1E1E1;
        width: 100%;
        height: 1px;
        -webkit-transform: scaleY(0.33333);
        transform: scaleY(0.33333);
        -webkit-transform-origin: 0 0;
        transform-origin: 0 0;
    }
    .diy_line:after {
        content: '';
        position: absolute;
        left: 0;
        top:0;
        background: #E1E1E1;
        width: 100%;
        height: 1px;
        -webkit-transform: scaleY(0.33333);
        transform: scaleY(0.33333);
        -webkit-transform-origin: 0 0;
        transform-origin: 0 0;
    }
}