.component-box{
    display: flex;
    background: #FFFFFF;
    align-items: center;
    padding-top: 20rpx;
    margin-bottom: 16rpx;
}
.travel-state{
    background: #F5DA81;
    border-radius: 8rpx;
    width:110rpx;
    height: 104rpx;
    margin: 0 40rpx 0 40rpx;
    color: #FEFEFE;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 14px;
}
.travel-state .top {
    font-size: 16px;
    margin-bottom: -10rpx;
}
.travel-state .bottom{
    font-size: 16px;
    margin-top: -10rpx;
}
.travel-state.doubt{
    background: #374150;
}
.travel-state.history{
    background: #dddddd;
}
.travel-count{
    width:110rpx;
    padding: 0 32rpx 0 34rpx;
    color: #222222;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-weight: bold;
}
.travel-count .cancel-text{
    color: #888888;
    font-size: 12px;
}
.company-account {
    color: #323232;
    font-size: 10px;
    border: 1px solid #979797;
    border-radius: 4rpx;
    padding: 0 5rpx 0 5rpx;
}
.travel-info{
    font-size: 14px;
    color: #323232;
    flex: 1;
}
.travel-info .top-title{
    /*padding-bottom: 20rpx;*/
    font-weight: bold;
}
.passenger-info{
    margin-left: 20rpx;
}
.problem-tips{
    float: right;
    margin-right: 30rpx;
    font-weight: lighter;
}
.bottom-title{
    /*margin-bottom: 20rpx;*/
    font-weight: bold;
}
.bottom-title .right{
    padding: 0 0 0 20rpx;
    margin-left: 16rpx;
    border-left: #e1e1e1 1rpx solid;
}
.address{
    border-top: #E1E1E1 1rpx solid;
    margin-top: 20rpx;
}
.address-box{
    color:#646464;
    font-size: 14px;
    margin: 15rpx 0 15rpx 0rpx;
    display: flex;
    align-items: center;
}
.address-text{
    margin-left: 30rpx;
    color: #888888;
    width: 470rpx;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}
.state-desc{
    margin-top: 20rpx;
    border-top: #E1E1E1 1rpx solid;
    font-size: 17px;
    color: #323232;
    font-weight: bold;
    padding: 24rpx 0 55rpx 0;
}
.count{
    color: #AB956D;
}