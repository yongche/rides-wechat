.info-window{
    width: 702rpx;
    height: 440rpx;
    background: #FFFFFF;
    border: 1px solid #E1E1E1;
    border-radius: 8rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
}

.info-window .info-text{
    font-size: 17px;
    color: #323232;
    margin-top: 90rpx;
}
.info-window .count{
    font-size: 40px;
    color: #AB956D;
}


.balance-box{
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 90rpx;
    font-size: 15px;
    color: #646464;
    margin: 0 30rpx 0 30rpx;
    border-top: 1px solid #E1E1E1;
}