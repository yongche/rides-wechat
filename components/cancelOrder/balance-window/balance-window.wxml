<!--取消有责，余额抵扣支付组件-->
<view class="custom-class">
    <view class="info-window">
        <view class="info-text">您取消行程时间过晚，需支付取消费</view>
        <view>
            <text class="count">{{payCount}}</text>
            <text>元</text>
        </view>
        <view style="width: 100%">
            <view class="balance-box">
                <text>余额抵扣</text>
                <text>-{{balance}}元</text>
            </view>
        </view>
    </view>
</view>