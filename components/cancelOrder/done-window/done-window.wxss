.info-window{
    width: 702rpx;
    height: 440rpx;
    background: #FFFFFF;
    border: 1px solid #E1E1E1;
    border-radius: 8rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-repeat: no-repeat;
    background-position: top right;
    background-size: 175rpx 175rpx;
}

.info-window .info-text{
    font-size: 17px;
    color: #323232;
    margin-bottom: 28rpx;
}
.info-window .count{
    font-size: 40px;
    color: #323232;
}
